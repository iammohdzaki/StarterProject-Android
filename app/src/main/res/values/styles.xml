<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fonts Defined Here -->
    <style name="FontLight" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_thin</item>
    </style>

    <style name="FontMedium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_medium</item>
    </style>

    <style name="FontMediumItalic" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_medium_italic</item>
    </style>

    <style name="FontItalic" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_italic</item>
    </style>

    <style name="FontBold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_bold</item>
    </style>

    <style name="FontBoldItalic" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_bold_italic</item>
    </style>

    <style name="FontRegular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="secondary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_secondary_btn</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>